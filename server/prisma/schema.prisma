generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String           @id @default(cuid())
  email            String           @unique
  passwordHash     String
  name             String?
  stripeCustomerId String?          @unique
  createdAt        DateTime         @default(now())
  projects         Project[]
  metadataProjects MetadataProject[]
  wizardProjects   WizardProject[]
  subscription     Subscription?
}

model Subscription {
  id                   String   @id @default(cuid())
  userId               String   @unique
  user                 User     @relation(fields: [userId], references: [id])
  stripeSubscriptionId String   @unique
  plan                 Plan     @default(FREE)
  status               String   // active, canceled, past_due
  currentPeriodEnd     DateTime
}

enum Plan {
  FREE
  PRO
}

model Project {
  id              String       @id @default(cuid())
  userId          String
  user            User         @relation(fields: [userId], references: [id])
  name            String
  styleConfig     Json
  deviceSize      String       @default("6.9")
  sourceLanguage  String       @default("en")
  targetLanguages String[]     @default([])
  translationData Json?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  screenshots     Screenshot[]
}

model MetadataProject {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id])
  name              String
  platform          String   // "ios" | "android"
  inputMode         String   @default("description") // "description" | "keywords"
  appName           String   @default("")
  briefDescription  String   @default("")
  targetKeywords    String   @default("")
  generatedMetadata Json?
  editedMetadata    Json?
  translations      Json?
  sourceLanguage    String   @default("en-US")
  targetLanguages   String[] @default([])
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Screenshot {
  id             String  @id @default(cuid())
  projectId      String
  project        Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  order          Int
  imagePath      String?
  text           String  @default("")
  decorations    Json?
  styleOverride  Json?
  mockupSettings Json?
}

model WizardProject {
  id                  String   @id @default(cuid())
  userId              String
  user                User     @relation(fields: [userId], references: [id])
  appName             String   @default("")
  briefDescription    String   @default("")
  targetKeywords      String   @default("")
  uploadedScreenshots Json?
  generateScreenshots Boolean  @default(true)
  generateIcon        Boolean  @default(true)
  generateMetadata    Boolean  @default(true)
  tone                String   @default("bright")
  selectedTemplateId  String?
  sourceLanguage      String   @default("en-US")
  targetLanguages     String[] @default([])
  generatedHeadlines  Json?
  editedHeadlines     Json?
  generatedMetadata   Json?
  editedMetadata      Json?
  generatedIconUrl    String?
  translatedHeadlines Json?
  translatedMetadata  Json?
  styleConfig         Json?
  currentStep         Int      @default(1)
  status              String   @default("draft")
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
